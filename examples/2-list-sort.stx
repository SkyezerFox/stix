let someList = [11,3,4,1]

sort x: int[] -> {
    if length x <= 1 return
    first, last = split x 
    empty x

    sort first
    sort last

    while length last > 0 && length first > 0 {
        if first[0] <= last[0] {
            append x, shift first
        } else {
            append x, shift last
        }
    }

    while length first > 0 {
        append x, shift first
    }

    while length last > 0 {
        append x, shift last
    }
}

sort someList
